html, body
  height 100%
  margin 0
  padding 0

.tmpl
  display none

#main
  margin 0 auto
  width 960px
  position relative
  height 100%


#chat
  margin-right 300px
  position: relative;
  height 100%
  z-index 9999
  background: #a7bce0
  box-shadow 0 0 8px #aaa

  .ruler
    position absolute
    left 0; top 0; bottom 160px
    width 100px
    // background #DAE8EF
    border-right 1px solid #C4D1D7
    z-index 999

  .chats
    position absolute
    left 0px; right 0px; top 0px
    bottom 160px
    background #fff
    overflow-y scroll
    .body
      position relative
      z-index 9
      // .message
      .dialog.split
        border-top 1px solid #999
      .dialog
        position relative
        padding-top 5px
        padding-bottom 5px
        .username_bg
          position absolute
          left 0; top 0; bottom 0
          width 5px
          opacity 0.5
        .username
          float left
          width 95px
          height 20px
          padding-right 5px
          text-align right
        // .contents
        .messages
          margin-left 105px
          // .content
          .item
            position relative
            .text
              margin-right 50px
              // border-right 1px solid #C4D1D7
            .datetime
              position absolute
              right 0; top 0
              padding-left 10px
              width 40px
              height 20px
              line-height 20px
              font-size 14px
              color #888
      .dialog.separate
        background #FBF8DA
        .username
          color #CA0000
        .username_bg
          background #CA0000
        .text
          color #888
          font-style italic

  .input
    position absolute
    left 0; right 0; bottom 0
    height 150px

    textarea
      position absolute
      left 10px; right 10px; top 0
      bottom 50px
      border 1px solid #aaa
      border-radius 2px
      font-size 15px
      padding 5px

#panel
  float right
  width 267px
  padding 0 15px 30px 17px
  background  #fafafa
  box-shadow -5px 5px 5px #bbb
  border-right 1px solid #eee

  .title
    position relative
    width 100px
    height 30px
    padding-left 15px
    left 188px
    margin 20px 0 15px 0
    line-height 30px
  .title .arrow
    top 31px

  p
    font-size 15px
    color #444
    margin 0 0 10px 0
    b, a
      margin-left 10px
      color #B00B0B
    a
      font-style italic

  .head
    position relative
    height 50px
    line-height 43px
    text-align center
    font-size 26px
    color #074082
    font-weight bold
    letter-spacing 1.5px
    z-index 1
    .deco_left, .deco_right
      display block
      position absolute
      top 10px
      width 30px
      height 30px
      background-size 25px
      background-repeat no-repeat
    .deco_left
      background-image url('/static/img/title_deco_l.png')
      left 42px
    .deco_right
      background-image url('/static/img/title_deco_r.png')
      right 37px
    .deco_underline
      position absolute
      width 100%
      height 1px
      bottom 2px
      background transparent
      border-bottom 1px solid #ccc
      box-shadow 0 1px 1px #dfdfdf
      z-index 9999

  .status
    height 60px
    background #fff
    margin-top 15px
    box-shadow 0 0 8px #ccc inset
    position relative
    overflow hidden
    -webkit-transition height 1s ease-in-out
    > .brand
      position absolute
      left 110px
      width 50px
      border-left 1px solid #ccc
      border-right 1px solid #ccc
      border-bottom 1px solid #ccc
      border-radius 0 0 8px 8px
      font-size 14px
      text-align center
      color #041F3E
    .content
      padding 25px 0 10px 0
      text-align center
      font-size 16px
      // font-family helvetica, arial, sans-serif
      -webkit-transition height 1s ease-in-out
    .content.info
      color #041F3E
    .content.warning
      color #A88E00
    .content.error
      color #9C1E04

  .login, .userinfo
    overflow hidden

  .login
    // padding 5px 0
    // text-align center
    input
      display block
      outline none
    .inputWrapper
      position relative
      overflow hidden
      input[name="username"], input[name="password"]
        float left
        height 25px
        border 1px solid #bbb
        border-radius 3px
        padding: 0 5px
      input[name="username"]
        width 220px
      input[name="password"]
        margin-left 10px
      a.tip
        display block
        width 20px
        height 25px
        float right
        position relative
        top -1px
        background-image url('/static/img/lock.png');
        background-size 30px
        background-position -5px -3px
        cursor pointer
      a.cancel
        display block
        position absolute
        right 1px
        width 25px
        height 26px
        // border 1px solid #bbb
        border-radius 0 3px 3px 0
        background #922626
        font-size 18px
        color #fff
        font-family sans-serif
        font-weight bold
        text-align center
        line-height 26px
        cursor pointer
    ul.colors
      overflow hidden
      // width 140px
      display block
      margin 0
      margin-top 10px
      padding 3px
      list-style none
      li:last-child
        margin-right 0
      li
        margin-right 10px
        float left
        position relative
        // height 20px
        a
          position relative
          z-index 9
          display inline-block
          width 20px
          height 20px
          box-shadow 0 0 8px #555 inset
        .cursor
          display block
          position absolute
          left -3px; top -3px
          width 24px
          height 24px
          border 1px solid #555
          background #fff
          z-index 1
    .submitWrapper
      margin-top 10px
      overflow: hidden
      input[type="submit"]
        float right
        width 80px
        font-size 11px

  .roominfo
    .users
      box-shadow 0 0 10px #888 inset
      height 100px
      background #fff
      padding 10px
      .item
        float left
        width 35px
        height 35px
        margin 0 10px 10px 0
        line-height 35px
        border 1px solid #aaa
        text-align center
        color #0BB038


// Effects

.green-gradient-button
  background-color #7fbf4d
  // background-image linear-gradient(top, #7fbf4d, #63a62f)
  background-image -webkit-gradient(linear, left top, left bottom, from(#7fbf4d), to(#6DB338))
  border 1px solid #63a62f
  border-bottom 1px solid #5b992b
  border-radius 3px
  box-shadow inset 0 1px 0 0 #96ca6d
  color #fff
  font bold 11px "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
  line-height 1
  padding 7px 0 8px 0
  text-align center
  text-shadow 0 -1px 0 #4c9021
  width 150px
.green-gradient-button:hover
  background-color #76b347
  // background-image linear-gradient(top, #76b347, #5e9e2e)
  background-image -webkit-gradient(linear, left top, left bottom, from(#76b347), to(#5e9e2e))
  box-shadow inset 0 1px 0 0 #8dbf67
  cursor pointer
.green-gradient-button:active
  border 1px solid #5b992b
  border-bottom 1px solid #538c27
  box-shadow inset 0 0 8px 4px #548c29, 0 1px 0 0 #eeeeee

.title.folded
  box-shadow 1px 1px 3px #555
  color #111
  text-shadow 0 1px 0 #eee
  background-color #AFCCED
  // background-image -webkit-gradient(linear, left top, left bottom, from(#DFE6EF), to(#AFCCED))
  background-image: -webkit-gradient(linear, left top, left bottom,
    color-stop(0%, rgba(255, 255, 255, 0.5)),
    color-stop(100%, rgba(255, 255, 255, 0.1))
  );
.title.folded .arrow
  width 0
  height 0
  line-height 0
  border-right 20px solid transparent
  // border-top 10px solid #c8c8c8
  border-top 10px solid #97A5B7
  right: 0
  position absolute
.title.folded, .title.folded .arrow
  -webkit-transition all 1s ease-in-out

.title.green
  background-color #86CF4D
  cursor pointer
.title.green .arrow
  border-top-color #599729

.prettyscrollbar::-webkit-scrollbar {
    width: 8px;
    height: 8px;
    border-left: solid 1 #000
    background-color: rgba(122, 161, 185, 0.5);
}

.prettyscrollbar::-webkit-scrollbar-button:start:decrement {
    display: block;
    height: 0px
}

.prettyscrollbar::-webkit-scrollbar-button:end:increment {
    display: block;
    height: 0px
}

.prettyscrollbar::-webkit-scrollbar-button:vertical:increment {
    background-color: transparent
}

.prettyscrollbar::-webkit-scrollbar-track:enabled {
    background-color: rgba(122, 161, 185, 0.5);
}

.prettyscrollbar::-webkit-scrollbar-thumb:vertical {
    height: 50px;
    background-color: rgba(0,0,0,.3);
    -webkit-border-radius: 5px
}

.prettyscrollbar::-webkit-scrollbar-thumb:horizontal {
    width: 50px;
    background-color: rgba(0,0,0,.2);
    -webkit-border-radius: 5px
}



.scrollbar1::-webkit-scrollbar {
    width: 10px;
    height: 6px;
}

.scrollbar1::-webkit-scrollbar-button:start:decrement,
.scrollbar1::-webkit-scrollbar-button:end:increment {
    height: 30px;
    display: block;
    background-color: transparent;
}

.scrollbar1::-webkit-scrollbar-track-piece {
    background-color: #3b3b3b;
    -webkit-border-radius: 6px;
}

.scrollbar1::-webkit-scrollbar-thumb:vertical {
    height: 50px;
    background-color: #666;
    -webkit-border-radius: 6px;
}

.scrollbar1::-webkit-scrollbar-thumb:horizontal {
    width: 50px;
    background-color: #666;
    -webkit-border-radius: 3px;
}
