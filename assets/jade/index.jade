!!! 5
html
  head
    title Chatroom
    link(rel='stylesheet', href='{{ static_url(\'css/index.css\') }}')
    script(src='/static/js/libs/require.js', data-main='/static/js/index.js')

body
  #main

    #panel
      .head Chatroom
        span.deco_left
        span.deco_right
        .deco_underline

      .status
        .brand Status
        .content.info

      .title.folded.sec0.loginTitle.green
        span.text Login
        span.arrow

      .login
        .inputWrapper
          input(type='text', name='username', placeholder='username')
          //- img.tip(src='{{ static_url(\'img/lock.png\') }}')
          a.tip
          input(type='password', name='password', placeholder='password', style='display: none;')
          a.cancel(style='display: none;') x
        ul.colors
          li
            a(color='#3A3A3A')
            span.cursor
          li
            a(color='#B00B0B')
          li
            a(color='#B0770B')
          li
            a(color='#0BB038')
          li
            a(color='#0B77B0')
          li
            a(color='#5B0BB0')
          li
            a(color='#B00B69')
        //- .submitWrapper
        //-   input(type='submit', value='Sign&Log In').green-gradient-button

      .userinfo(style='display: none;')
        p Username
          b.username
        p Actions
          a(href='#').logout logout

      .title.folded.sec1
        span.text Roominfo
        span.arrow

      .roominfo
        p Online users
          b.number
        .users(style='display: none;')
          //- .item(username='reorx') R

    #chat
      .ruler
      .chats.prettyscrollbar
        .body
          //- .dialog
          //-   .username Reorx
          //-   .contents
          //-     .content
          //-       .text Hello everybody, welcome to Chatroom ~~
          //-       .datetime 22:41
      .input
        textarea#messageInput(readonly='readonly')

  #tmpl-dialog.tmpl
    .dialog
      .username_bg(style='background-color: ${color};')
      .username(style='color: ${color};') ${username}
      .messages
  #tmpl-dialog-separate.tmpl
    .dialog.separate
      .username_bg
      .username
      .messages
        .item
          .text ${content}
          .datetime
  #tmpl-message.tmpl
    .item
      .text ${content}
      .datetime ${hourtime}
